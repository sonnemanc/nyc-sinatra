<h1>Create A New Figure</h1>

<form action="/figures" method="POST">
  <label>Name</label>
  <input type="text" name="figure[name]" id="figure_name">
      <br>
      <br>
  <label><h2>Titles<h2></label>
      <br>
    <%Title.all.each do |title|%>
      <label><%= title.name %></label>
      <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%= title.id %>"><br>
    <% end %>
  <label><h3>Create New Title</h3></label>
    <input type="text" id="new_title" name="title[name]">
      <br>
  <label><h4>Landmarks</h4></label>
    <%Landmark.all.each do |landmark|%>
        <label><%=landmark.name%></label>
        <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" value="<%=landmark.id%>"
      <br>
    <%end%>
  <label><h5>Create New Landmark:</h5></label>
      <br>
    <label>Name:</label>
      <input type="text" name="landmark[name]" id="new_landmark">
    <label>Year:</label>
      <input type="text" name="landmark[year_completed]"
      <br>
    <input type="submit" value="Create New Figure">
</form>